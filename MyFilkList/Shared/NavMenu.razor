@using MyFilkList.Models
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">MyFilkList</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @if (_songs is not null)
        {
            @foreach (var song in _songs)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@("Songs/" + song.NavKey)" Match="NavLinkMatch.All">
                        <span class="oi oi-musical-note" aria-hidden="true"></span> @song.Title
                    </NavLink>
                </div>
            }    
        }
        
    </nav>
</div>
